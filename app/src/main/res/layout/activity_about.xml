<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.it01.sistempakar.activity.About"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7B2A3B"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/toolbar"
        ></android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/sistem_pakar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E80C7A"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_text"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Sistem Pakar untuk Mendiagnosa Penyakit Perut Menggunakan Metode Forward Chaining Berbasis Android"
            android:textStyle="bold|italic"
            android:textColor="#FF530D"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E80C7A"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pengarang"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Dibuat Oleh : Alfien elyusdiansyah"
            android:textStyle="bold"
            android:textColor="#E82C0C"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nim"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="NIM  : 1514312092"
            android:textStyle="bold"
            android:textColor="#E82C0C"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E80C7A"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>
